{% for review in section.blocks %}
  <div class="review">
    <div class="review-img">
      <img src="{{ review.settings.image | img_url: 'master' }}" alt="Imagen de la review">
    </div>
    <div class="review-info">
      <h3>{{ review.settings.Nombre }}</h3>
      <div class="stars">
        <span class="star">{{ review.settings.estrellas }}&#9733;</span>
      </div>
      <p>{{ review.settings.comentario }}</p>
    </div>
  </div>
{% endfor %}

{% schema %}
{
  "name": "Review",
  "tag": "section",
  "class": "slideshow",
  "max_blocks": 5,
  "settings": [
    {
      "type": "text",
      "id": "comentario",
      "label": "Comentario",
      "info" : "Comentario info"
    }
  ],
  "blocks": [
     {
       "name": "comentario",
       "type": "slide",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         },
         {
            "type": "text",
            "id": "Nombre",
            "label": "Nombre"
          },
         {
            "type": "textarea",
            "id": "comentario",
            "label": "comentario"
        },
         {
          "type": "number",
          "id": "estrellas",
          "label": "estrellas"
        }
       ]
     }
  ],
  "presets": [
    {
      "name": "Review",
      "blocks": [
        {
        "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
